{
  "name": "btc-price-chart",
  "version": "1.0.0",
  "description": "A React application to display BTC price chart",
  "main": "src/index.js",
  "homepage": "/ports/14533/dashboard",
  "scripts": {
    "start": "react-scripts start",
    "build": "DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "DISABLE_ESLINT_PLUGIN=true NODE_OPTIONS='--openssl-legacy-provider' react-scripts start",
    "build:watch": "nodemon --ext js,jsx,ts,tsx,css --exec \"npm run build\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "@cubejs-client/core": "^0.30.1",
    "date-fns": "2.30.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-datalabels": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.24.0",
    "nodemon": "^3.1.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
